  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.?(m|c)@(j|t)s?(x)": "eslint --fix",
    "package.json": "pnpm dlx sort-package-json"
  },
  "devDependencies": {
    "@arianrhodsandlot/eslint-config": "0.19.0",
    "@hono/node-server": "1.14.4",
    "@hono/zod-validator": "0.7.0",
    "@libsql/client": "0.15.9",
    "@tsconfig/node-ts": "23.6.1",
    "@tsconfig/node24": "24.0.1",
    "@types/fs-extra": "11.0.4",
    "@types/node": "24.0.10",
    "@types/pug": "2.0.10",
    "@types/sax": "1.2.7",
    "drizzle-kit": "0.31.4",
    "drizzle-orm": "0.44.2",
    "es-toolkit": "1.39.5",
    "esbuild": "0.25.5",
    "eslint": "9.30.1",
    "execa": "9.6.0",
    "fs-extra": "11.3.0",
    "goodcodes-parser": "2.5.0",
    "hono": "4.8.3",
    "jiti": "2.4.2",
    "json5": "2.2.3",
    "libretrodb": "1.0.0",
    "lint-staged": "16.1.2",
    "nanoid": "5.1.5",
    "nanoid-dictionary": "5.0.0",
    "pug": "3.0.3",
    "sax": "1.4.1",
    "simple-git-hooks": "2.13.0",
    "tsdown": "0.12.9",
    "wrangler": "4.22.0",
    "zod": "3.25.67"
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=24.2.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "simple-git-hooks",
      "unrs-resolver",
      "workerd"
    ]
  }
