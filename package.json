  "type": "module",
  "scripts": {
    "build:db": "node src/scripts/build-db/build-db.ts",
    "build:server": "esbuild src/server.ts --bundle --allow-overwrite --platform=node --outdir=dist --target=esnext --format=esm",
    "dev:server": "node --watch src/server.ts",
    "dev:test": "node --run=test -- --watch",
    "test": "node --test"
